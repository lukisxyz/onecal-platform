DATABASE_URL="file:./db/local.db"

# Environment: local (anvil), development (baseSepolia), or production (base)
NODE_ENV=development
CHAIN_ENV=development
# Optional: Set VITE_NODE_ENV for client-side access to NODE_ENV
VITE_NODE_ENV=development

# OnchainKit Configuration
# Get your API key from: https://portal.cdp.coinbase.com/
VITE_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here
VITE_ONCHAINKIT_PROJECT_ID=your_onchainkit_project_id_here

# OpenZeppelin Relayer Configuration
# Get your API key from the relayer service
RELAYER_API_KEY=your_relayer_api_key_here
VITE_RELAYER_API_KEY=your_relayer_api_key_here
VITE_RELAYER_URL=http://localhost:8080

# Contract Configuration
# The address of the deployed MentorRegistry contract
VITE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# RPC Configuration
# RPC URL for blockchain interaction
RPC_URL=http://localhost:8545
VITE_RPC_URL=http://localhost:8545

# Chain Configuration
# Chain ID for the blockchain network (31337 for local, 84532 for Base Sepolia, etc.)
VITE_CHAIN_ID=31337
